@model CMCS.Models.Claim

@{
    ViewData["Title"] = "Edit Claim";
}

<h2>Edit Claim</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <!-- Name Field (Read-Only) -->
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" readonly />
    </div>

    <!-- Description Field -->
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Start Date Field -->
    <div class="form-group">
        <label asp-for="StartDate" class="control-label"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <!-- End Date Field -->
    <div class="form-group">
        <label asp-for="EndDate" class="control-label"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <!-- Reason Field -->
    <div class="form-group">
        <label asp-for="Reason" class="control-label"></label>
        <input asp-for="Reason" class="form-control" />
        <span asp-validation-for="Reason" class="text-danger"></span>
    </div>

    <!-- Hours Worked Field -->
    <div class="form-group">
        <label asp-for="HoursWorked" class="control-label"></label>
        <input asp-for="HoursWorked" class="form-control" />
        <span asp-validation-for="HoursWorked" class="text-danger"></span>
    </div>

    <!-- Hourly Rate Field (Read-only for Lecturers, editable for Admins/Coordinators) -->
    @if (User.IsInRole("Admin") || User.IsInRole("Coordinator"))
    {
        <div class="form-group">
            <label asp-for="HourlyRate" class="control-label"></label>
            <input asp-for="HourlyRate" class="form-control" />
        </div>
    }
    else
    {
        <div class="form-group">
            <label asp-for="HourlyRate" class="control-label"></label>
            <input asp-for="HourlyRate" class="form-control" readonly />
        </div>
    }

    <!-- Document Upload Field -->
    <div class="form-group">
        <label>Upload Document</label>
        <input type="file" name="Document" class="form-control" />
    </div>

    <!-- Submit Button -->
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
