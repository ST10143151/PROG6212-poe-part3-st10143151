@page
@model CMCS.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <!-- Existing fields -->
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Additional user fields -->
            <div class="form-group">
                <label asp-for="Input.Department"></label>
                <input asp-for="Input.Department" class="form-control" />
                <span asp-validation-for="Input.Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Office"></label>
                <input asp-for="Input.Office" class="form-control" />
                <span asp-validation-for="Input.Office" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.OfficeHours"></label>
                <input asp-for="Input.OfficeHours" class="form-control" />
                <span asp-validation-for="Input.OfficeHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.HourlyRate"></label>
                <input asp-for="Input.HourlyRate" class="form-control" />
                <span asp-validation-for="Input.HourlyRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Profile"></label>
                <input asp-for="Input.Profile" class="form-control" />
                <span asp-validation-for="Input.Profile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Image"></label>
                <input asp-for="Input.Image" class="form-control" />
                <span asp-validation-for="Input.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Position"></label>
                <input asp-for="Input.Position" class="form-control" />
                <span asp-validation-for="Input.Position" class="text-danger"></span>
            </div>

            <!-- Role selection dropdown -->
            <div class="form-group">
                <label asp-for="Input.Role"></label>
                <select asp-for="Input.Role" class="form-control">
                    <option value="">Select Role</option>
                    <option value="Lecturer">Lecturer</option>
                    <option value="Admin">Admin</option>
                    <option value="HR">HR</option>
                    <option value="Coordinator">Coordinator</option>
                    <option value="Manager">Manager</option>
                </select>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-6 offset-md-1">
        <section>
            <h4>Use another service to register.</h4>
            <hr />
            @if (Model.ExternalLogins?.Count == 0)
            {
                <div>
                    <p>
                        Welcome To CMCS Registration
                    </p>
                </div>
            }
            else
            {
                <div>
                    <p>
                        You can use your favorite social media accounts to register with us.
                    </p>
                    <hr />
                    @foreach (var provider in Model.ExternalLogins)
                    {
                        <button type="submit" class="btn btn-secondary" formaction="ExternalLogin?provider=@provider.Name&amp;returnUrl=@Model.ReturnUrl">
                            @provider.DisplayName
                        </button>
                    }
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
