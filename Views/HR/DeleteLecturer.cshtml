@model CMCS.Models.User

<h2>Delete Lecturer</h2>

<div>
    <h4>Are you sure you want to delete this lecturer?</h4>
    <div>
        <strong>Name:</strong> @Model.Name
    </div>
    <div>
        <strong>Email:</strong> @Model.Email
    </div>
    <div>
        <strong>Department:</strong> @Model.Department
    </div>
    <div>
        <strong>Office:</strong> @Model.Office
    </div>
</div>

<form asp-action="DeleteLecturer" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ManageLecturers" class="btn btn-secondary">Cancel</a>
</form>
